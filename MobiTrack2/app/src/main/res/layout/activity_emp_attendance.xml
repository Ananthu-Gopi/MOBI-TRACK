<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_emp_attendance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lanciar.app.mobitrack.EmpAttendance"
    android:background="@drawable/news">

    <TextView
        android:text="Employee Attendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="30dp"
        android:id="@+id/textView8"
        android:textSize="25sp"
        android:textColor="#ffff"
        android:textAlignment="center" />

    <TextView
        android:text="EMP ID :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="70dp"
        android:id="@+id/textView10"
        android:textSize="20sp"
        android:textColor="#ffff" />

    <TextView
        android:text="DATE :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10"
        android:layout_marginTop="31dp"
        android:id="@+id/textView13"
        android:textSize="20sp"
        android:textColor="#ffff" />

    <TextView
        android:text="DATE :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView13"
        android:layout_alignRight="@+id/textView13"
        android:layout_alignEnd="@+id/textView13"
        android:layout_marginTop="26dp"
        android:id="@+id/textView15"
        android:textSize="20sp"
        android:textColor="#ffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_above="@+id/textView13"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:id="@+id/id"
        android:hint="emp id"
        android:textColorHint="#ffff"/>

    <TextView
        android:text="from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView15"
        android:layout_alignLeft="@+id/id"
        android:layout_alignStart="@+id/id"
        android:id="@+id/fdate"
        android:textSize="20sp"
        android:textColor="#ffff"/>

    <TextView
        android:text="to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignRight="@+id/fdate"
        android:layout_alignEnd="@+id/fdate"
        android:id="@+id/sdate"
        android:textSize="20sp"
        android:textColor="#ffff"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sdate"
        android:layout_alignLeft="@+id/fdate"
        android:layout_alignStart="@+id/fdate"
        android:layout_marginTop="33dp"
        android:id="@+id/sub"
        android:text="SUBMIT" />

    <TextView
        android:text="Number of Hours Worked :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginTop="44dp"
        android:id="@+id/textView18"
        android:textSize="20sp"
        android:textColor="#ffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hr"
        android:textSize="20sp"
        android:text="HRS"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/textView18"
        android:layout_toRightOf="@+id/textView15"
        android:layout_toEndOf="@+id/textView15"
        android:textColor="#ffff" />
</RelativeLayout>
